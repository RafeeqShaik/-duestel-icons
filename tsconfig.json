{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "scripts/*", "index.ts"],
  "exclude": ["node_modules", "dist"],
  "lib": ["es2015"]
}
