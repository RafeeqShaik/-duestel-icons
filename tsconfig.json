{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "scripts/*", "index.ts", "model"],
  "exclude": ["node_modules", "dist"]
}
